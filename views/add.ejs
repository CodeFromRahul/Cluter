<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-700 text-white px-10 py-5">
    <h1 class="text-xl">Create a new post</h1>
    <hr class=" opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2" type="file" name="postimage">
        <input class="text-black block w-1/3 px-3 py-2 mt-2 rounded-md " type="text" name="title" placeholder="title">
        <input class="text-black block w-1/3 px-3 py-2  mt-2 rounded-md " type="text" name="description" placeholder="Description">
        <input class="block w-1/3 px-3 py-2 mt-2 bg-red-800 rounded-md" type="submit" value="Create a post">
    </form>
</div>
